@page
@using GreenLocator.Models;
@using Microsoft.AspNetCore.Mvc;
@model GreenLocator.Pages.ChatModel
@inject GreenLocatorDBContext _context
@functions {
    public string Sender()
    {
        if(User.Identity == null)
        {
            return "Error";
        }

        AspNetUser current = _context.AspNetUsers.First(x => x.UserName == User.Identity.Name) ?? throw new ArgumentNullException();
        string name = current.UserName ?? throw new ArgumentNullException();

        return name;
    }
}
<div class="container">

    <div hidden class="<col-4"><input type="text" id="userInput" value=@Sender() readonly /></div>

    <div class="row">
        <div class="col-2">To:</div>
        <div class="col-4">
            <select name="To:" asp-items="Model.Options" id="receiverInput"></select>
        </div>
    </div>
    
    <br />
    <br />
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>