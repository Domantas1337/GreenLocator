@page

@using GreenLocator.Models;
@using Microsoft.AspNetCore.Mvc;

@model GreenLocator.Pages.EnterInfoModel

@inject GreenLocatorDBContext _context

@functions {

    public string Values(string input)
    {
        if (User.Identity == null)
        {
            return "error";
        }

        AspNetUser current = _context.AspNetUsers.First(x => x.UserName == User.Identity.Name);

        if (input == "City")
        {
            if (current.City != null)
            {
                return current.City;
            }
            else
            {
                return "";
            }
        }
        else if (input == "Street")
        {
            if (current.Street != null)
            {
                return current.Street;
            }
            else
            {
                return "";
            }

        }
        else
        {
            if (current.House != null)
            {
                return current.House.ToString();
            }
            else
            {
                return "";
            }
        }
    }

}
